<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/main_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <include app:graph="@navigation/card_list_graph" />
    <include app:graph="@navigation/user_card_graph" />
    <include app:graph="@navigation/add_card_graph" />

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.popalay.cardme.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">

        <action
            android:id="@+id/action_from_main_to_user_card"
            app:destination="@id/user_card_graph"
            app:popUpTo="@id/mainFragment" />

        <action
            android:id="@+id/action_from_main_to_add_card"
            app:destination="@id/add_card_graph"
            app:popUpTo="@id/mainFragment" />

    </fragment>

</navigation>