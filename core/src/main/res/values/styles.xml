<resources>

    <style name="Cardme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Cardme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">#FBFBFB</item>
    </style>

    <style name="Cardme.Button" parent="Widget.MaterialComponents.Button" />

    <style name="Cardme.EditText" parent="Base.Widget.AppCompat.EditText" />

    <style name="Cardme.EditText.Lineless">
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Cardme.Button.Colored" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">#A86ED7</item>
    </style>

    <style name="Cardme.Button.Floating.Long" parent="Cardme.Button.Colored">
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="Cardme.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Cardme.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog" />

    <style name="Cardme.Button.Outlined.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Cardme.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_dialog</item>
    </style>

    <style name="Cardme.BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/Cardme.BottomSheet</item>
    </style>

    <style name="Cardme.BottomSheetDialogTheme" parent="Cardme.BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>