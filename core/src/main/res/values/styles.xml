<resources>

    <style name="CardmeBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Cardme" parent="CardmeBase">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimary">?colorOnBackground</item>

        <item name="android:statusBarColor">@color/background</item>
        <item name="selectableItemBackground">@drawable/bg_ripple_rounded</item>
        <item name="android:selectableItemBackground">@drawable/bg_ripple_rounded</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_ripple_borderless</item>
        <item name="android:selectableItemBackgroundBorderless">@drawable/bg_ripple_borderless</item>
        <item name="windowActionBarOverlay">@style/Cardme.AppBarOverlay</item>
        <item name="materialCardViewStyle">@style/Cardme.CardView</item>
    </style>

    <style name="Cardme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background</item>
    </style>

    <style name="Cardme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Cardme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Cardme.Button" parent="Widget.MaterialComponents.Button" />

    <style name="Cardme.EditText" parent="Base.Widget.AppCompat.EditText" />

    <style name="Cardme.EditText.Lineless">
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Cardme.Button.Colored" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/rippleColor</item>
    </style>

    <style name="Cardme.Button.Floating.Long" parent="Cardme.Button.Colored">
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="Cardme.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Cardme.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog" />

    <style name="Cardme.Button.Outlined.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Cardme.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_dialog</item>
    </style>

    <style name="Cardme.BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog" />

    <style name="Cardme.BottomSheetDialogTheme" parent="Cardme.BaseBottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="bottomSheetStyle">@style/Cardme.BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>